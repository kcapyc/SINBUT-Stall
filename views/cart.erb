<h2>Корзина</h2>

<%#= @items.inspect %>

<div id="cart">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Название товара</th>
        <th>Цена</th>
        <th>Кол-во</th>
        <th>Итого</th>
      </tr>
    </thead>
    <tbody>
    <% total_price = 0 %>
    <% @items.each do |item| %>
      <tr>
        <td><%= item[0].title %> <em>— <%= item[0].author %></em></td>
        <td><%= item[0].price %> руб.</td>
        <td><%= item[1] %> экз.</td>
        <td><%= item[0].price * item[1].to_i %> руб.</td>
      </tr>
      <% total_price += item[0].price * item[1].to_i %>
    <% end %>

      <tr>
        <td colspan="3"></td>
        <th><%= total_price %> руб.</th>
      </tr>

    </tbody>
  </table>

  <form action="/add_order" method="POST" role="form">
    
    <input name="order[order_input]" type="hidden" value="<%= @order_input %>" />

    <div class="form-group">
      <label>Ваше имя:</label>
      <input name="order[name]" type="text" class="form-control" placeholder="Напишите своё имя">
    </div>

    <div class="form-group">
      <label>Ваш телефон:</label>
      <input name="order[phone]" type="text" class="form-control" placeholder="Напишите свой телефон">
    </div>

    <div class="form-group">
      <label>Ваш e-mail:</label>
      <input name="order[email]" type="text" class="form-control" placeholder="Напишите свою электронную почту">
    </div>

    <div class="form-group">
      <label>Ваш город:</label>
      <textarea name="order[address]" class="form-control" placeholder="Напишите свой город"></textarea>
    </div>

    <button type="submit" class="btn btn-success">Оформить заказ</button>
    <input type=button class="btn btn-warning" value="Отменить" onclick="cancel_order()" />
  </form>

</div>